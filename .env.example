# ==============================================
# DATABASE
# ==============================================
# PostgreSQL connection string
# Formato: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/access_control?schema=public"

# ==============================================
# JWT AUTHENTICATION
# ==============================================
# Secret key para assinar tokens (use string aleatória longa)
# Gere com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-min-32-chars"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production-min-32-chars"

# Tempo de expiração dos tokens
JWT_EXPIRES_IN="15m"           # Access token: 15 minutos
JWT_REFRESH_EXPIRES_IN="7d"    # Refresh token: 7 dias

# ==============================================
# EMAIL / SMTP
# ==============================================
# Configuração para envio de emails
# Gmail: Crie uma senha de app em https://myaccount.google.com/apppasswords
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password-not-regular-password"
SMTP_FROM="Sistema de Controle de Acesso <noreply@accesscontrol.com>"

# ==============================================
# APPLICATION
# ==============================================
# Porta do servidor
PORT=3000

# Ambiente (development, production, test)
NODE_ENV="development"

# ==============================================
# QR CODE
# ==============================================
# Tempo de expiração do QR Code em segundos (padrão: 1 hora)
QR_CODE_EXPIRES_IN=3600

# ==============================================
# CORS (opcional - para frontend)
# ==============================================
# Origem permitida (deixe vazio para permitir todas em dev)
# CORS_ORIGIN="http://localhost:3001"

# ==============================================
# RATE LIMITING (opcional)
# ==============================================
# Limite de requests por IP (por minuto)
# RATE_LIMIT_WINDOW_MS=60000
# RATE_LIMIT_MAX_REQUESTS=100
